    "execa": "^7.1.1",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.1",
    "kolibry": "workspace:*",
    "npm-run-all": "^4.1.5",
    "playwright-chromium": "^1.32.3",
    "resolve": "^1.22.2",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1",
    "vue": "^3.2.47"
  },
  "pnpm": {
    "overrides": {
      "kolibry": "workspace:*"
